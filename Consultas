-- Consultas
-- Cantidad de veces que cada cliente a visitado el centro
SELECT 
CLIENTES.Nombres,
CLIENTES.Apellidos,
count(Visitas.id_Cliente) as Cantidad_Visitas
FROM CLIENTES
INNER JOIN Visitas
ON  Visitas.id_Cliente = CLIENTES.id_Cliente
GROUP BY CLIENTES.Nombres,
CLIENTES.Apellidos;

-- Cantidad de vacunas que una mascota a tenido
SELECT 
MASCOTA.Nombre,
count(DETALLE_VACUNA.id_Vacuna) as Cantidad_de_vacunas
FROM MASCOTA
INNER JOIN DETALLE_VACUNA
ON  DETALLE_VACUNA.id_Mascota = MASCOTA.id_Mascota
GROUP BY MASCOTA.Nombre;

-- Cantidad de vacuna que cada veterinario a puesto
SELECT 
VETERINARIO.Nombre,
VETERINARIO.Apellido,
count(DETALLE_VACUNA.id_Vacuna) as Cantidad_de_vacunas_puestas
FROM VETERINARIO
INNER JOIN DETALLE_VACUNA
ON  DETALLE_VACUNA.id_Veterinario = VETERINARIO.id_Veterinario
GROUP BY 
VETERINARIO.Nombre,
VETERINARIO.Apellido;